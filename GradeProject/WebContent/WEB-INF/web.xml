<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>org.avid.controller.LoginServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>LoggedInServlet</servlet-name>
    <servlet-class>org.avid.controller.LoggedInServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>CreateIDServlet</servlet-name>
    <servlet-class>org.avid.controller.CreateIDServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>StudentController</servlet-name>
    <servlet-class>org.avid.controller.StudentController</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>TeacherController</servlet-name>
  	<servlet-class>org.avid.controller.TeacherController</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>LoggedInServlet</servlet-name>
    <url-pattern>/loggedin</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>CreateIDServlet</servlet-name>
    <url-pattern>/createnewid</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>StudentController</servlet-name>
    <url-pattern>/listClasses?student</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>TeacherController</servlet-name>
    <url-pattern>/listClasses?teacher</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>